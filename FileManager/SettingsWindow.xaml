<Window x:Class="FileManager.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ustawienia" Height="138" Width="260" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18" />
            <ColumnDefinition Width="260*" />
        </Grid.ColumnDefinitions>
        <CheckBox Grid.Column="1" Height="16" Margin="0,16,0,0" Name="cbRunWithSystem" VerticalAlignment="Top">Uruchom wraz ze startem systemu</CheckBox>
        <CheckBox Grid.Column="1" Height="16" Margin="0,38,0,0" Name="cbRememberOpenedDir" VerticalAlignment="Top">Zapamiętaj otwarte katalogi</CheckBox>
        <Button Grid.Column="1" Height="23" Margin="52,0,0,12" Name="bOK" VerticalAlignment="Bottom" IsDefault="True" HorizontalAlignment="Left" Width="74" Click="bOK_Click">OK</Button>
        <Button Grid.Column="1" Height="23" HorizontalAlignment="Right" Margin="0,0,11,12" Name="bCancel" VerticalAlignment="Bottom" Width="75" IsCancel="True">Anuluj</Button>
    </Grid>
</Window>
